void count();
%}

/* note: \042 is '"' */

SINGLE_COMMENT      ("//"[^\n]*)
MULTI_COMMENT       ("/*"([^*]|[*][^/])*"*/")
CONSTANT            ("0"|[1-9][0-9]*)
HEXADECIMAL         ("0"[Xx]{1}[0-9a-fA-F]+)
OCTAL               ("0"[0-7]*)
STRING              (\042[^\042\n]*\042)
UNTERM_STRING       (\042[^\042\n]*)
IDENTIFIER          ([_a-zA-Z][_a-zA-Z0-9]*)

%%
